<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>To-Do List</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Agbalumo&family=Handlee&family=Nabla&display=swap" rel="stylesheet">
<link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>My To-Do List</h1>
    </header>
    <form action="/add" method="post">
      <input type="text" name="newTask" placeholder="Add new task here...">
      <button type="submit">Add</button>
    </form>
    <ul>
      <% tasks.forEach(function(task, index) { %>
        <li>
          <%= task %>
          <!-- Delete form for each task -->
          <form action="/delete/<%= index %>" method="POST" style="display: inline;">
            <button type="submit">Done</button>
          </form>
        </li>
      <% }); %>
    </ul>
    <ul>
      <% tasks.forEach((task, index) => { %>
        <li>
          <input
            type="checkbox"
            <%= task.completed ? 'checked' : '' %> 
            id="task<%= index %>"
            onchange="updateTaskStatus(<%= index %>)"
          >
          <label for="task<%= index %>"><%= task.text %></label>
          <form action="/delete/<%= index %>" method="post">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
    
    
    
    
  </div>
  <script src="views/server.js"></script>
</body>
</html>
